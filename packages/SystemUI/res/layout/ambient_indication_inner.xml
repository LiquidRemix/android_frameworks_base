    <TextView
        android:textSize="14.0sp"
        android:textColor="#ffffff"
        android:id="@+id/ambient_indication_text"
        android:background="@drawable/ambient_indication_pill_background"	
        android:layout_marginBottom="6.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	android:paddingLeft="17.0sp"		
        android:paddingTop="8.0sp"		
        android:paddingRight="17.0sp"		
        android:paddingBottom="8.0sp"
        android:singleLine="true"
	android:drawablePadding="12.0sp"		
        android:drawableTint="?wallpaperTextColorSecondary"		
        android:drawableTintMode="src_in"        
	android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:forceHasOverlappingRendering="false" />
</LinearLayout>
