<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ambient_indication"
    android:paddingTop="16.0dip"
    android:visibility="invisible"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="71.0dip"
    android:layout_marginStart="64.0dip"
    android:layout_marginEnd="64.0dip"
    android:forceHasOverlappingRendering="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <liquid.support.lottie.LottieAnimationView
        android:id="@+id/ambient_indication_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8.0dip"
        android:tint="#ffffff"
        android:tintMode="src_in"
